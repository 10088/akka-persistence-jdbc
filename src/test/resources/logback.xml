<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <pattern>%date{ISO8601} - %logger -> %-5level[%thread] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="akka.persistence.jdbc" level="debug"/>-->
    <!--<logger name="com.zaxxer.hikari.pool.HikariPool" level="debug"/>-->
    <!--<logger name="akka.persistence.jdbc.journal" level="info"/>-->

    <!--<logger name="slick.backend.DatabaseComponent.action" level="debug"/>-->

    <!-- Logs session events such as opening/closing connections -->
    <!--<logger name="slick.session" level="debug"/>-->

    <!-- Logs SQL sent to the database -->
    <!--<logger name="slick.jdbc.JdbcBackend.statement" level="DEBUG"/>-->

    <!-- Logs the first few results of each query. -->
    <!--<logger name="slick.jdbc.StatementInvoker.result" level="DEBUG"/>-->

    <root level="error">
        <appender-ref ref="console"/>
    </root>

</configuration>